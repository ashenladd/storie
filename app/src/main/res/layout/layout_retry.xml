<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:background="@color/blue950">

    <ImageView
        android:id="@+id/iv_retry"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/img_loading"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_retry"
        style="@style/TextContent.Paragraph.Small"
        android:textColor="@color/Neutral3"
        android:layout_width="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/desc_retry"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_retry" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_retry"
        style="@style/ButtonGeneral.Outlined"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/label_retry"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_retry" />


</androidx.constraintlayout.widget.ConstraintLayout>