<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/plusjakartasans_regular</item>
    </style>

    <style name="TextContent.Heading">
        <item name="fontFamily">@font/plusjakartasans_bold</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:letterSpacing">-0.02</item>
    </style>

    <style name="TextContent.Heading.Mega">
        <item name="android:textSize">48sp</item>
    </style>

    <style name="TextContent.Heading.XLarge">
        <item name="android:textSize">36sp</item>
    </style>

    <style name="TextContent.Heading.Large">
        <item name="android:textSize">32sp</item>
    </style>

    <style name="TextContent.Heading.Medium">
        <item name="android:textSize">28sp</item>
    </style>

    <style name="TextContent.Heading.XXSmall">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextContent.Paragraph">
        <item name="fontFamily">@font/plusjakartasans_light</item>
        <item name="android:lineSpacingMultiplier">1.5</item>
    </style>

    <style name="TextContent.Paragraph.Large">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextContent.Paragraph.Medium">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextContent.Paragraph.Small">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextContent.Paragraph.XSmall">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextContent.Label">
        <item name="fontFamily">@font/plusjakartasans_medium</item>
        <item name="android:lineSpacingMultiplier">1.5</item>
    </style>

    <style name="TextContent.Label.Large">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextContent.Label.Medium">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextContent.Label.Small">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextContent.Label.XSmall">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextContent.SubHeading">
        <item name="fontFamily">@font/plusjakartasans_bold</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>

    <style name="TextContent.SubHeading.XXLarge">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextContent.SubHeading.XLarge">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextContent.SubHeading.Large">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextContent.SubHeading.Medium">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextContent.SubHeading.Small">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextContent.SubHeading.XSmall">
        <item name="android:textSize">12sp</item>
    </style>


    <style name="ButtonGeneral">
        <item name="textAllCaps">false</item>
        <item name="android:textAppearance">@style/TextContent.SubHeading.Medium</item>
        <item name="android:background">@drawable/bg_primary_gradient_45</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ButtonGeneral.PrimaryVariant">
        <item name="android:backgroundTint">@color/yellow400</item>
        <item name="android:background">@drawable/bg_button_yellow_ripple</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ButtonGeneral.SecondaryVariant">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/bg_button_white_ripple</item>
    </style>

    <style name="ButtonGeneral.Outlined">
        <item name="android:textColor">@color/Neutral3</item>
        <item name="android:background">@drawable/bg_outlined_button_white_ripple</item>
    </style>

    <style name="Storie.InputLayout" parent="Base.Widget.MaterialComponents.TextInputLayout">
        <item name="android:background">@drawable/bg_input_default_primary</item>
        <item name="hintEnabled">false</item>
        <item name="hintAnimationEnabled">false</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
    </style>

    <style name="Storie.InputEditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/Neutral3</item>
        <item name="android:textAppearance">@style/TextContent.Paragraph.XSmall</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Storie.InputLayout.Full">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">48dp</item>
    </style>

    <style name="MaterialAlertDialog.App" parent="MaterialAlertDialog.Material3">
        <item name="shapeAppearance">@style/ShapeAppearance.App.MediumComponent</item>
        <item name="shapeAppearanceOverlay">@null</item>
    </style>

    <style name="MaterialAlertDialog.App.Title.Text" parent="MaterialAlertDialog.Material3.Title.Text">
        <item name="android:textColor">@color/Neutral2</item>
    </style>

    <style name="Widget.App.Button" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/Neutral2</item>
    </style>

    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="Widget.Storie.AppWidget.Container" parent="android:Widget">
        <item name="android:id">@android:id/background</item>
        <item name="android:background">?android:attr/colorBackground</item>
    </style>

    <style name="Widget.Storie.AppWidget.InnerView" parent="android:Widget">
        <item name="android:background">?android:attr/colorBackground</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

</resources>