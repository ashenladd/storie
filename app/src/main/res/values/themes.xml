<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Storie" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/blue950</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/yellow400</item>
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.App.MaterialAlertDialog</item>
        <item name="materialSwitchStyle">@style/Widget.App.Switch</item>
    </style>

    <style name="ThemeOverlay.App.MaterialAlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="colorPrimary">@color/blue950</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/yellow400</item>
        <item name="colorSurface">@color/blue900</item>
        <item name="colorOnSurface">@color/yellow400</item>
        <item name="alertDialogStyle">@style/MaterialAlertDialog.App</item>
        <item name="materialAlertDialogTitleTextStyle">@style/MaterialAlertDialog.App.Title.Text</item>
        <item name="buttonBarPositiveButtonStyle">@style/Widget.App.Button</item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.App.Button</item>
    </style>

    <style name="Widget.App.Switch" parent="Widget.Material3.CompoundButton.MaterialSwitch">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Switch</item>
    </style>

    <style name="ThemeOverlay.App.Switch" parent="">
        <item name="colorPrimary">@color/yellow500</item>
        <item name="colorOnPrimary">@color/Neutral5</item>
        <item name="colorSurfaceContainerHighest">@color/Neutral5</item>
        <item name="colorSurfaceVariant">@color/black</item>

    </style>

    <style name="Theme.Storie" parent="Base.Theme.Storie" />

</resources>